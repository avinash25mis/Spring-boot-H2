<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<configuration scan="true">
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- The FILE and ASYNC appenders are here as examples for a production configuration -->




    <appender name="application"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>c:/Crimsonlogs/application-%d{yyyy-MM-dd-HH}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <!--<pattern>%X{transactionId}|%date{yyyy-MM-dd HH:mm:ss:SSS} | %-5level %class{36}.%M %L  %message %n</pattern>-->
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS} | %-5level %class{36}.%M %L [%X{transactionId}] %message %n </pattern>
        </encoder>
    </appender>



    <appender name="rechargeScheduler"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/rechargeScheduler.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>c:/Crimsonlogs/hour_feed/rechargeScheduler-%d{yyyy-MM-dd-HH}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS} | %-5level %class{36}.%M %L #***** %message *****#%n</pattern>
        </encoder>
    </appender>



    <appender name="paymentScheduler"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/paymentScheduler.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>c:/Crimsonlogs/hour_feed/paymentScheduler-%d{yyyy-MM-dd-HH}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS} | %-5level %class{36}.%M %L #***** %message *****#%n</pattern>
        </encoder>
    </appender>



    <appender name="notificationLogger"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/notificationLogger.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>c:/Crimsonlogs/hour_feed/notificationLogger-%d{yyyy-MM-dd-HH}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS} | %-5level %class{36}.%M %L #***** %message *****#%n</pattern>
        </encoder>
    </appender>


    <appender name="low_balance_feed"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/low_balance_feed.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <fileNamePattern>c:/Crimsonlogs/hour_feed/low_balance_feed-%d{yyyy-MM-dd_HH}.%i.log
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS}, %message%n</pattern>
        </encoder>
    </appender>

    <appender name="recharge_feed"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>c:/Crimsonlogs/recharge_feed.csv</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>c:/Crimsonlogs/minute_feed/recharge_feed-%d{yyyy-MM-dd_HH-mm}.%i.csv
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss:SSS}, %message%n</pattern>
        </encoder>
    </appender>


    <appender name="changeMsn"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
